---
import { leetCodeData } from "../data/leetcode";
import { Award, Star } from "lucide-react";

const { badges } = leetCodeData;
---

<div class="neo-card p-6">
	<h3 class="text-lg font-bold mb-4">Achievement Badges</h3>
	{
		badges.length > 0 ? (
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
				{badges.slice(0, 6).map((badge) => (
					<div
						class="neo-card p-4 flex items-start gap-3"
						style="box-shadow:var(--shadow-2xs);"
					>
						<div class="w-10 h-10 flex items-center justify-center border-2 border-border">
							<Award className="w-5 h-5" />
						</div>
						<div class="flex-1 min-w-0">
							<h4 class="font-semibold truncate">{badge.displayName}</h4>
							<p class="text-xs text-muted-foreground truncate mb-1">
								{badge.description}
							</p>
							<p class="text-[11px] text-muted-foreground">
								{new Date(badge.createdDate).toLocaleDateString()}
							</p>
						</div>
					</div>
				))}
			</div>
		) : (
			<div class="text-center py-6">
				<div class="neo-card inline-flex mb-4 p-3">
					<Award className="w-6 h-6" />
				</div>
				<p class="text-sm text-muted-foreground">No badges earned yet</p>
			</div>
		)
	}
</div>
