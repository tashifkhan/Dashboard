---
import { leetCodeData } from "../data/leetcode";
import { Award, Star } from "lucide-react";

const { badges } = leetCodeData;
---

<div
	class="bg-white dark:bg-gray-800 p-6 rounded-lg border border-gray-200 dark:border-gray-700"
>
	<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
		Achievement Badges
	</h3>

	{
		badges.length > 0 ? (
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
				{badges.slice(0, 6).map((badge) => (
					<div class="flex items-center space-x-3 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
						<div class="flex-shrink-0">
							<div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-full flex items-center justify-center">
								<Award className="w-6 h-6 text-white" />
							</div>
						</div>
						<div class="flex-1 min-w-0">
							<h4 class="font-medium text-gray-900 dark:text-white truncate">
								{badge.displayName}
							</h4>
							<p class="text-sm text-gray-600 dark:text-gray-300 truncate">
								{badge.description}
							</p>
							<p class="text-xs text-gray-500 dark:text-gray-400">
								{new Date(badge.createdDate).toLocaleDateString()}
							</p>
						</div>
					</div>
				))}
			</div>
		) : (
			<div class="text-center py-8">
				<Award className="w-12 h-12 text-gray-400 mx-auto mb-4" />
				<p class="text-gray-500 dark:text-gray-400">No badges earned yet</p>
			</div>
		)
	}
</div>

