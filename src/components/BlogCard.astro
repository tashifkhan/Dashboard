---
import { Calendar, Clock, ExternalLink, ArrowRight } from "lucide-react";
import {
	Card,
	CardContent,
	CardFooter,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { cn } from "@/lib/utils";

type RemotePost = {
	title: string;
	date: string; // ISO date
	author: string;
	socials: string[];
	tags: string[];
	excerpt: string;
	slug: string;
	wordCount?: number;
	readingTimeMinutes?: number;
};

type Props = {
	post: RemotePost;
	variant?: "default" | "featured" | "compact" | "spotlight";
	index?: number;
};

const { post, variant = "default", index = 0 } = Astro.props as Props;

const url = `https://blog.tashif.codes/blog/${post.slug}`;
const dateObj = new Date(post.date);
const dateText = dateObj.toLocaleDateString("en-US", {
	month: "short",
	day: "numeric",
	year: "numeric",
});

// Prefer API-provided reading time & word count; fall back to heuristics
const readTime =
	post.readingTimeMinutes ??
	Math.max(1, Math.round((post.excerpt?.length || 200) / 200));
const wordCount = post.wordCount ?? 0;
const wordCountText = wordCount
	? wordCount.toLocaleString("en-US") + " words"
	: "";
---

{
	variant === "featured" ? (
		<a
			href={url}
			target="_blank"
			rel="noopener noreferrer"
			class="block h-full group focus:outline-none"
			data-blog-card
			data-blog-tags={post.tags?.join(",")}
		>
			<Card
				className={cn(
					"h-full overflow-hidden border-border/50 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1 dark:hover:shadow-primary/5 hover:border-primary/20",
					"animate-in fade-in slide-in-from-bottom-4"
				)}
				style={{ animationDelay: `${index * 100}ms` }}
			>
				<div class="flex flex-col md:flex-row h-full">
					<div class="relative md:w-1/3 p-6 flex flex-col justify-between bg-muted/30 border-b md:border-b-0 md:border-r border-border/50">
						<div class="flex flex-wrap gap-2 z-10">
							{post.tags?.slice(0, 3).map((tag) => (
								<Badge
									variant="secondary"
									className="text-[10px] font-medium tracking-wide"
									data-blog-tag
								>
									{tag}
								</Badge>
							))}
						</div>
						<div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent opacity-50" />
					</div>
					<div class="flex-1 flex flex-col p-6 gap-4">
						<div class="space-y-2">
							<h2
								class="text-2xl font-bold tracking-tight group-hover:text-primary transition-colors"
								data-blog-title
							>
								{post.title}
							</h2>
							{post.excerpt && (
								<p class="text-muted-foreground leading-relaxed line-clamp-3">
									{post.excerpt}
								</p>
							)}
						</div>
						<div class="mt-auto pt-4 flex items-center gap-4 text-sm text-muted-foreground">
							<span class="flex items-center gap-1.5">
								<Calendar className="w-4 h-4" />
								{dateText}
							</span>
							<span class="flex items-center gap-1.5">
								<Clock className="w-4 h-4" />
								{readTime} min read
							</span>
							<span class="ml-auto flex items-center gap-1.5 text-primary font-medium group-hover:translate-x-1 transition-transform">
								Read Article <ArrowRight className="w-4 h-4" />
							</span>
						</div>
					</div>
				</div>
			</Card>
		</a>
	) : (
		<a
			href={url}
			target="_blank"
			rel="noopener noreferrer"
			class="block h-full group focus:outline-none"
		>
			<Card
				className={cn(
					"h-full flex flex-col overflow-hidden border-border/50 bg-card/50 backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-1 dark:hover:shadow-primary/5 hover:border-primary/20",
					"animate-in fade-in slide-in-from-bottom-4"
				)}
				style={{ animationDelay: `${index * 100}ms` }}
			>
				<CardHeader className="p-5 pb-2 space-y-3">
					<div class="flex flex-wrap gap-2">
						{post.tags?.slice(0, 3).map((tag) => (
							<Badge
								variant="outline"
								className="text-[10px] font-normal bg-background/50 backdrop-blur-sm"
								data-blog-tag
							>
								{tag}
							</Badge>
						))}
					</div>
					<CardTitle
						className="text-lg leading-tight group-hover:text-primary transition-colors line-clamp-2"
						data-blog-title
					>
						{post.title}
					</CardTitle>
				</CardHeader>
				<CardContent className="p-5 py-2 flex-1">
					{post.excerpt && (
						<p class="text-sm text-muted-foreground leading-relaxed line-clamp-3">
							{post.excerpt}
						</p>
					)}
				</CardContent>
				<CardFooter className="p-5 pt-2 text-xs text-muted-foreground flex items-center justify-between border-t border-border/30 mt-auto bg-muted/20">
					<div class="flex items-center gap-3">
						<span class="flex items-center gap-1.5">
							<Calendar className="w-3.5 h-3.5" />
							{dateText}
						</span>
						<span class="flex items-center gap-1.5">
							<Clock className="w-3.5 h-3.5" />
							{readTime}m
						</span>
					</div>
					<span class="flex items-center gap-1.5 text-primary opacity-0 group-hover:opacity-100 transition-all duration-300 -translate-x-2 group-hover:translate-x-0">
						Read <ExternalLink className="w-3 h-3" />
					</span>
				</CardFooter>
			</Card>
		</a>
	)
}
