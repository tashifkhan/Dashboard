---
import { leetCodeData } from "../data/leetcode";
import { Trophy, Target, Calendar, Award } from "lucide-react";

const { stats, profile } = leetCodeData;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-10">
	<div class="neo-card flex flex-col gap-2">
		<div class="flex items-center justify-between">
			<p
				class="text-xs font-medium uppercase tracking-wide text-muted-foreground"
			>
				Total Solved
			</p>
			<Trophy className="w-5 h-5" />
		</div>
		<p class="text-3xl font-extrabold leading-none">{stats.totalSolved}</p>
		<p class="text-xs text-muted-foreground">
			of {stats.totalQuestions} problems
		</p>
	</div>
	<div class="neo-card flex flex-col gap-2">
		<div class="flex items-center justify-between">
			<p
				class="text-xs font-medium uppercase tracking-wide text-muted-foreground"
			>
				Global Ranking
			</p>
			<Target className="w-5 h-5" />
		</div>
		<p class="text-3xl font-extrabold leading-none">
			#{stats.ranking.toLocaleString()}
		</p>
		<p class="text-xs text-muted-foreground">out of millions</p>
	</div>
	<div class="neo-card flex flex-col gap-2">
		<div class="flex items-center justify-between">
			<p
				class="text-xs font-medium uppercase tracking-wide text-muted-foreground"
			>
				Reputation
			</p>
			<Award className="w-5 h-5" />
		</div>
		<p class="text-3xl font-extrabold leading-none">{stats.reputation}</p>
		<p class="text-xs text-muted-foreground">contribution points</p>
	</div>
	<div class="neo-card flex flex-col gap-2">
		<div class="flex items-center justify-between">
			<p
				class="text-xs font-medium uppercase tracking-wide text-muted-foreground"
			>
				Contribution
			</p>
			<Calendar className="w-5 h-5" />
		</div>
		<p class="text-3xl font-extrabold leading-none">
			{stats.contributionPoints}
		</p>
		<p class="text-xs text-muted-foreground">points earned</p>
	</div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
	<div class="neo-card">
		<div class="flex items-center justify-between mb-3">
			<h3 class="font-semibold">Easy</h3>
			<span class="text-xl font-bold">{stats.easySolved}/{stats.totalEasy}</span
			>
		</div>
		<div class="w-full h-3 border-2 border-border mb-2">
			<div
				class="h-full bg-primary"
				style={`width: ${(stats.easySolved / stats.totalEasy) * 100}%`}
			>
			</div>
		</div>
		<p class="text-xs text-muted-foreground">
			{Math.round((stats.easySolved / stats.totalEasy) * 100)}% completed
		</p>
	</div>
	<div class="neo-card">
		<div class="flex items-center justify-between mb-3">
			<h3 class="font-semibold">Medium</h3>
			<span class="text-xl font-bold"
				>{stats.mediumSolved}/{stats.totalMedium}</span
			>
		</div>
		<div class="w-full h-3 border-2 border-border mb-2">
			<div
				class="h-full bg-primary"
				style={`width: ${(stats.mediumSolved / stats.totalMedium) * 100}%`}
			>
			</div>
		</div>
		<p class="text-xs text-muted-foreground">
			{Math.round((stats.mediumSolved / stats.totalMedium) * 100)}% completed
		</p>
	</div>
	<div class="neo-card">
		<div class="flex items-center justify-between mb-3">
			<h3 class="font-semibold">Hard</h3>
			<span class="text-xl font-bold">{stats.hardSolved}/{stats.totalHard}</span
			>
		</div>
		<div class="w-full h-3 border-2 border-border mb-2">
			<div
				class="h-full bg-primary"
				style={`width: ${(stats.hardSolved / stats.totalHard) * 100}%`}
			>
			</div>
		</div>
		<p class="text-xs text-muted-foreground">
			{Math.round((stats.hardSolved / stats.totalHard) * 100)}% completed
		</p>
	</div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
	<div class="neo-card">
		<div class="flex items-center justify-between mb-3">
			<h3 class="font-semibold">Acceptance (est)</h3>
			<span class="text-xl font-bold">
				{
					stats.totalQuestions > 0
						? Math.round((stats.totalSolved / stats.totalQuestions) * 100)
						: 0
				}%
			</span>
		</div>
		<div class="w-full h-3 border-2 border-border mb-2">
			<div
				class="h-full bg-primary"
				style={`width: ${stats.totalQuestions > 0 ? (stats.totalSolved / stats.totalQuestions) * 100 : 0}%`}
			>
			</div>
		</div>
		<p class="text-xs text-muted-foreground">Solved vs total problems</p>
	</div>
	<div class="neo-card">
		<div class="flex items-center justify-between mb-3">
			<h3 class="font-semibold">Contribution</h3>
			<span class="text-xl font-bold">{stats.contributionPoints}</span>
		</div>
		<div class="w-full h-3 border-2 border-border mb-2">
			<div
				class="h-full bg-primary"
				style={`width: ${Math.min((stats.contributionPoints / 5000) * 100, 100)}%`}
			>
			</div>
		</div>
		<p class="text-xs text-muted-foreground">
			Points earned from contributions
		</p>
	</div>
	<div class="neo-card">
		<div class="flex items-center justify-between mb-3">
			<h3 class="font-semibold">Active Days</h3>
			<span class="text-xl font-bold"
				>{Object.keys(stats.submissionCalendar || {}).length}</span
			>
		</div>
		<div class="w-full h-3 border-2 border-border mb-2">
			<div
				class="h-full bg-primary"
				style={`width: ${Math.min((Object.keys(stats.submissionCalendar || {}).length / 365) * 100, 100)}%`}
			>
			</div>
		</div>
		<p class="text-xs text-muted-foreground">
			Days with at least one submission
		</p>
	</div>
</div>
