---
import { leetCodeData } from "../data/leetcode";
import { Trophy, Target, Calendar, Award } from "lucide-react";

const { stats, profile } = leetCodeData;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
	<!-- Total Solved -->
	<div
		class="bg-gradient-to-br from-green-500 to-green-600 dark:from-green-600 dark:to-green-700 p-6 rounded-lg text-white"
	>
		<div class="flex items-center justify-between">
			<div>
				<p class="text-green-100 text-sm font-medium">Total Solved</p>
				<p class="text-3xl font-bold">{stats.totalSolved}</p>
				<p class="text-green-100 text-sm">of {stats.totalQuestions} problems</p>
			</div>
			<Trophy className="w-8 h-8 text-green-200" />
		</div>
	</div>

	<!-- Ranking -->
	<div
		class="bg-gradient-to-br from-blue-500 to-blue-600 dark:from-blue-600 dark:to-blue-700 p-6 rounded-lg text-white"
	>
		<div class="flex items-center justify-between">
			<div>
				<p class="text-blue-100 text-sm font-medium">Global Ranking</p>
				<p class="text-3xl font-bold">#{stats.ranking.toLocaleString()}</p>
				<p class="text-blue-100 text-sm">out of millions</p>
			</div>
			<Target className="w-8 h-8 text-blue-200" />
		</div>
	</div>

	<!-- Reputation -->
	<div
		class="bg-gradient-to-br from-purple-500 to-purple-600 dark:from-purple-600 dark:to-purple-700 p-6 rounded-lg text-white"
	>
		<div class="flex items-center justify-between">
			<div>
				<p class="text-purple-100 text-sm font-medium">Reputation</p>
				<p class="text-3xl font-bold">{stats.reputation}</p>
				<p class="text-purple-100 text-sm">contribution points</p>
			</div>
			<Award className="w-8 h-8 text-purple-200" />
		</div>
	</div>

	<!-- Contribution Points -->
	<div
		class="bg-gradient-to-br from-orange-500 to-orange-600 dark:from-orange-600 dark:to-orange-700 p-6 rounded-lg text-white"
	>
		<div class="flex items-center justify-between">
			<div>
				<p class="text-orange-100 text-sm font-medium">Contribution</p>
				<p class="text-3xl font-bold">{stats.contributionPoints}</p>
				<p class="text-orange-100 text-sm">points earned</p>
			</div>
			<Calendar className="w-8 h-8 text-orange-200" />
		</div>
	</div>
</div>

<!-- Difficulty Breakdown -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
	<!-- Easy -->
	<div
		class="bg-green-50 dark:bg-green-900/20 p-6 rounded-lg border border-green-200 dark:border-green-800"
	>
		<div class="flex items-center justify-between mb-2">
			<h3 class="text-lg font-semibold text-green-700 dark:text-green-300">
				Easy
			</h3>
			<span class="text-2xl font-bold text-green-600 dark:text-green-400"
				>{stats.easySolved}/{stats.easyTotal}</span
			>
		</div>
		<div class="w-full bg-green-200 dark:bg-green-800 rounded-full h-2">
			<div
				class="bg-green-500 h-2 rounded-full transition-all duration-300"
				style={`width: ${(stats.easySolved / stats.easyTotal) * 100}%`}
			>
			</div>
		</div>
		<p class="text-sm text-green-600 dark:text-green-400 mt-2">
			{Math.round((stats.easySolved / stats.easyTotal) * 100)}% completed
		</p>
	</div>

	<!-- Medium -->
	<div
		class="bg-yellow-50 dark:bg-yellow-900/20 p-6 rounded-lg border border-yellow-200 dark:border-yellow-800"
	>
		<div class="flex items-center justify-between mb-2">
			<h3 class="text-lg font-semibold text-yellow-700 dark:text-yellow-300">
				Medium
			</h3>
			<span class="text-2xl font-bold text-yellow-600 dark:text-yellow-400"
				>{stats.mediumSolved}/{stats.mediumTotal}</span
			>
		</div>
		<div class="w-full bg-yellow-200 dark:bg-yellow-800 rounded-full h-2">
			<div
				class="bg-yellow-500 h-2 rounded-full transition-all duration-300"
				style={`width: ${(stats.mediumSolved / stats.mediumTotal) * 100}%`}
			>
			</div>
		</div>
		<p class="text-sm text-yellow-600 dark:text-yellow-400 mt-2">
			{Math.round((stats.mediumSolved / stats.mediumTotal) * 100)}% completed
		</p>
	</div>

	<!-- Hard -->
	<div
		class="bg-red-50 dark:bg-red-900/20 p-6 rounded-lg border border-red-200 dark:border-red-800"
	>
		<div class="flex items-center justify-between mb-2">
			<h3 class="text-lg font-semibold text-red-700 dark:text-red-300">Hard</h3>
			<span class="text-2xl font-bold text-red-600 dark:text-red-400"
				>{stats.hardSolved}/{stats.hardTotal}</span
			>
		</div>
		<div class="w-full bg-red-200 dark:bg-red-800 rounded-full h-2">
			<div
				class="bg-red-500 h-2 rounded-full transition-all duration-300"
				style={`width: ${(stats.hardSolved / stats.hardTotal) * 100}%`}
			>
			</div>
		</div>
		<p class="text-sm text-red-600 dark:text-red-400 mt-2">
			{Math.round((stats.hardSolved / stats.hardTotal) * 100)}% completed
		</p>
	</div>
</div>

