---
import { remark } from "remark";
import remarkHtml from "remark-html";
import rehypePrism from "rehype-prism-plus";
import remarkGfm from "remark-gfm";

const { content, githubBaseUrl } = Astro.props;

let html = "";

function convertRelativeUrl(url: string): string {
	if (!githubBaseUrl) return url;
	if (url.startsWith("http://") || url.startsWith("https://")) return url;

	// Convert GitHub URL to raw.githubusercontent.com for images
	let baseUrl = githubBaseUrl;
	if (
		baseUrl.includes("github.com") &&
		!baseUrl.includes("raw.githubusercontent.com")
	) {
		baseUrl =
			baseUrl.replace("github.com", "raw.githubusercontent.com") + "/main";
	}

	let convertedUrl = url;
	if (url.startsWith("./")) {
		convertedUrl = baseUrl + "/" + url.substring(2);
	} else if (url.startsWith("../")) {
		convertedUrl = baseUrl + "/" + url.replace(/^\.\.\//, "");
	} else if (url.startsWith("/")) {
		convertedUrl = baseUrl + url;
	} else if (!url.includes("://") && !url.startsWith("#")) {
		convertedUrl = baseUrl + "/" + url;
	}
	return convertedUrl;
}

function enhanceHtml(rawHtml: string): string {
	let html = rawHtml;

	// Inline code - Enhanced styling
	html = html.replace(
		/<code>([^<\n]+)<\/code>/g,
		'<code class="bg-gradient-to-r from-gray-800/60 to-gray-700/60 text-orange-300 px-2.5 py-1.5 rounded-md text-sm font-mono border border-orange-500/20 shadow-sm backdrop-blur-sm hover:border-orange-500/40 transition-all duration-200">$1</code>'
	);

	// Headers - Enhanced with better typography and spacing
	html = html.replace(
		/<h1>(.*?)<\/h1>/g,
		'<h1 class="text-3xl font-bold mb-6 text-white border-b-2 border-orange-500/30 pb-3 mt-8 first:mt-0">$1</h1>'
	);
	html = html.replace(
		/<h2>(.*?)<\/h2>/g,
		'<h2 class="text-2xl font-semibold mb-4 text-white/95 mt-8 flex items-center"><span class="w-1 h-6 bg-gradient-to-b from-orange-400 to-orange-600 rounded-full mr-3"></span>$1</h2>'
	);
	html = html.replace(
		/<h3>(.*?)<\/h3>/g,
		'<h3 class="text-xl font-medium mb-3 text-white/90 mt-6 flex items-center"><span class="w-1 h-5 bg-gradient-to-b from-blue-400 to-blue-600 rounded-full mr-2"></span>$1</h3>'
	);
	html = html.replace(
		/<h4>(.*?)<\/h4>/g,
		'<h4 class="text-lg font-medium mb-2 text-white/85 mt-5 flex items-center"><span class="w-1 h-4 bg-gradient-to-b from-green-400 to-green-600 rounded-full mr-2"></span>$1</h4>'
	);

	// Bold/italic - Enhanced styling
	html = html.replace(
		/<strong>(.*?)<\/strong>/g,
		'<strong class="font-bold text-white bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">$1</strong>'
	);
	html = html.replace(
		/<em>(.*?)<\/em>/g,
		'<em class="italic text-white/90 font-medium">$1</em>'
	);

	// Images - Enhanced with better styling and hover effects
	html = html.replace(
		/<img([^>]*)src="([^"]+)"([^>]*)>/g,
		(match: string, before: string, src: string, after: string) => {
			const fullSrc = convertRelativeUrl(src);
			return (
				"<div class='my-6 group'><img" +
				before +
				'src="' +
				fullSrc +
				'"' +
				after +
				' class="max-w-full h-auto rounded-xl border-2 border-gray-700/50 shadow-2xl transition-all duration-300 group-hover:border-orange-500/50 group-hover:shadow-orange-500/20 group-hover:scale-[1.02] mx-auto block" /></div>'
			);
		}
	);

	// Links - Enhanced with better styling and animations
	html = html.replace(
		/<a href="([^"]+)"([^>]*)>(.*?)<\/a>/g,
		(match: string, url: string, rest: string, text: string) => {
			const fullUrl = convertRelativeUrl(url);
			return (
				'<a href="' +
				fullUrl +
				'" target="_blank" class="text-orange-400 hover:text-orange-300 underline decoration-2 underline-offset-2 transition-all duration-200 hover:decoration-orange-300 font-medium"' +
				rest +
				">" +
				text +
				"</a>"
			);
		}
	);

	// Lists - Enhanced with better styling and icons
	html = html.replace(/<ul>/g, '<ul class="my-4 space-y-2 list-none pl-0">');
	html = html.replace(/<ol>/g, '<ol class="my-4 space-y-2 list-decimal pl-6">');
	html = html.replace(
		/<li>/g,
		'<li class="text-white/80 mb-2 flex items-start"><span class="w-2 h-2 bg-orange-500 rounded-full mt-2 mr-3 flex-shrink-0"></span><span class="flex-1">'
	);
	html = html.replace(/<\/li>/g, "</span></li>");

	// Todo checkboxes - Enhanced styling
	html = html.replace(
		/<input type="checkbox"([^>]*)>/g,
		'<input type="checkbox" class="mr-3 mt-1 h-4 w-4 rounded border-2 border-gray-600 bg-gray-700 text-orange-500 focus:ring-2 focus:ring-orange-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-all duration-200"$1>'
	);

	// Enhanced code blocks with language labels and proper closing
	html = html.replace(
		/<pre class="([^"]*)language-([^"]*)"([^>]*)>([\s\S]*?)<\/pre>/g,
		(
			match: string,
			classes: string,
			language: string,
			rest: string,
			content: string
		) => {
			const langLabel = language !== "text" ? language.toUpperCase() : "";
			const langLabelHtml = langLabel
				? '<div class="language-label">' + langLabel + "</div>"
				: "";
			const copyButton =
				'<button class="copy-button" onclick="copyCode(this)" title="Copy code"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg></button>';
			return (
				'<div class="code-block-wrapper group my-8">' +
				langLabelHtml +
				copyButton +
				'<pre class="' +
				classes +
				" language-" +
				language +
				'"' +
				rest +
				">" +
				content +
				"</pre></div>"
			);
		}
	);

	// Tables - Enhanced with modern styling
	html = html.replace(
		/<table>/g,
		'<div class="overflow-x-auto my-8 rounded-xl border border-gray-700/50 shadow-xl"><table class="min-w-full bg-gray-800/30 backdrop-blur-sm">'
	);
	html = html.replace(/<\/table>/g, "</table></div>");
	html = html.replace(
		/<thead>/g,
		'<thead class="bg-gray-800/60 border-b border-gray-700/50">'
	);
	html = html.replace(
		/<th>/g,
		'<th class="px-6 py-4 text-left text-sm font-semibold text-white/95 border-r border-gray-700/30 last:border-r-0">'
	);
	html = html.replace(
		/<td>/g,
		'<td class="px-6 py-4 text-sm text-white/80 border-r border-gray-700/20 last:border-r-0">'
	);
	html = html.replace(
		/<tr>/g,
		'<tr class="hover:bg-gray-700/30 transition-all duration-200 border-b border-gray-700/20 last:border-b-0">'
	);

	// Paragraphs - Enhanced with better typography
	html = html.replace(
		/<p>/g,
		'<p class="text-white/75 mb-6 leading-relaxed text-base">'
	);

	// Blockquotes - Enhanced styling
	html = html.replace(
		/<blockquote>/g,
		'<blockquote class="border-l-4 border-orange-500 bg-orange-500/10 pl-6 py-4 my-6 rounded-r-lg">'
	);
	html = html.replace(/<\/blockquote>/g, "</blockquote>");

	return html;
}

if (content) {
	const processed = await remark()
		.use(remarkGfm)
		.use(remarkHtml, { sanitize: false })
		.use(rehypePrism, {
			showLineNumbers: true,
			lineNumbers: true,
			plugins: ["line-numbers", "command-line", "diff-highlight"],
		})
		.process(content);
	html = enhanceHtml(processed.value.toString());
} else {
	html = "<p>No content provided.</p>";
}
---

<div class="prose prose-invert max-w-none space-y-6" set:html={html} />

<script is:inline>
	function copyCode(button) {
		const pre = button.nextElementSibling;
		const code = pre.textContent || pre.innerText;

		// Create a temporary textarea for older browsers
		const textarea = document.createElement("textarea");
		textarea.value = code;
		textarea.style.position = "fixed";
		textarea.style.opacity = "0";
		document.body.appendChild(textarea);

		try {
			// Try modern clipboard API first
			if (navigator.clipboard && window.isSecureContext) {
				navigator.clipboard
					.writeText(code)
					.then(() => {
						showCopyFeedback(button, true);
					})
					.catch(() => {
						// Fallback to selection method
						fallbackCopy();
					});
			} else {
				// Fallback for older browsers
				fallbackCopy();
			}
		} catch (err) {
			fallbackCopy();
		}

		function fallbackCopy() {
			textarea.select();
			textarea.setSelectionRange(0, 99999); // For mobile devices
			try {
				document.execCommand("copy");
				showCopyFeedback(button, true);
			} catch (err) {
				console.error("Failed to copy: ", err);
				showCopyFeedback(button, false);
			}
		}

		// Clean up
		document.body.removeChild(textarea);
	}

	function showCopyFeedback(button, success) {
		const originalHTML = button.innerHTML;

		if (success) {
			button.classList.add("copied");
			button.innerHTML =
				'<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
			button.title = "Copied!";
		} else {
			button.classList.add("error");
			button.innerHTML =
				'<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>';
			button.title = "Failed to copy";
		}

		setTimeout(() => {
			button.classList.remove("copied", "error");
			button.innerHTML = originalHTML;
			button.title = "Copy code";
		}, 2000);
	}
</script>
