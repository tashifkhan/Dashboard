---
import Layout from "../layouts/Layout.astro";
import ResumeComponent from "../components/Resume.astro";
import { ArrowLeft } from "lucide-react";
import { Button } from "@/components/ui/button";
---

<Layout title="Resume - Tashif Ahmad Khan">
	<div
		class="relative min-h-screen bg-background text-gray-900 dark:text-gray-100 transition-colors duration-300 font-sans scroll-smooth"
	>
		<div
			class="pointer-events-none absolute inset-0 [mask-image:radial-gradient(80%_60%_at_50%_0%,black,transparent)]"
		>
			<div
				class="h-40 bg-gradient-to-b from-orange-200/40 to-transparent dark:from-orange-900/20"
			>
			</div>
		</div>

		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
			<div class="mb-8">
				<Button
					variant="ghost"
					className="mb-4 pl-0 hover:pl-2 transition-all hover:bg-transparent"
					asChild
				>
					<a href="/" class="flex items-center gap-2 hover:text-primary">
						<ArrowLeft size={18} className="mr-2" />
						Back to Home
					</a>
				</Button>
			</div>

			<ResumeComponent />
		</div>
	</div>
</Layout>
