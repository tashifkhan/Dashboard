---
import Layout from "../layouts/Layout.astro";
import ResumeComponent from "../components/Resume.astro";
import { ArrowLeft } from "lucide-react";
---

<Layout title="Resume - Tashif Ahmad Khan">
	<div
		class="min-h-screen bg-background text-foreground py-6 sm:py-8 resume-brutalist"
	>
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-6 sm:mb-8">
				<a
					href="/"
					class="neo-btn neo-btn--outline !py-1.5 !px-3 text-xs sm:text-sm mb-4"
				>
					<ArrowLeft size={16} />
					Back
				</a>
				<h1 class="neo-heading mb-3">Resume</h1>
				<p class="text-xs sm:text-sm text-muted-foreground max-w-prose">
					Professional experience and achievements
				</p>
			</div>
			<div class="neo-section !p-4 sm:!p-6">
				<ResumeComponent />
			</div>
		</div>
	</div>
</Layout>
