---
import Layout from "../layouts/Layout.astro";
import LeetCodeStats from "../components/LeetCodeStats.astro";
import LeetCodeContests from "../components/LeetCodeContests.astro";
import LeetCodeBadges from "../components/LeetCodeBadges.astro";
import { Trophy, Target, Award } from "lucide-react";
---

<Layout title="LeetCode - Tashif Ahmad Khan">
	<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-8">
				<div class="flex items-center space-x-3 mb-4">
					<div
						class="p-3 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl"
					>
						<Trophy className="w-6 h-6 text-white" />
					</div>
					<div>
						<h1 class="text-4xl font-bold text-gray-900 dark:text-white">
							LeetCode Profile
						</h1>
						<p class="text-gray-600 dark:text-gray-300">
							Competitive programming achievements and statistics
						</p>
					</div>
				</div>
			</div>

			<div class="space-y-8">
				<!-- Stats Section -->
				<div>
					<div class="flex items-center space-x-3 mb-6">
						<Target className="w-5 h-5 text-orange-500" />
						<h2 class="text-2xl font-bold text-gray-900 dark:text-white">
							Statistics
						</h2>
					</div>
					<LeetCodeStats />
				</div>

				<!-- Contests Section -->
				<div>
					<div class="flex items-center space-x-3 mb-6">
						<Trophy className="w-5 h-5 text-orange-500" />
						<h2 class="text-2xl font-bold text-gray-900 dark:text-white">
							Recent Contests
						</h2>
					</div>
					<LeetCodeContests />
				</div>

				<!-- Badges Section -->
				<div>
					<div class="flex items-center space-x-3 mb-6">
						<Award className="w-5 h-5 text-orange-500" />
						<h2 class="text-2xl font-bold text-gray-900 dark:text-white">
							Achievement Badges
						</h2>
					</div>
					<LeetCodeBadges />
				</div>
			</div>
		</div>
	</div>
</Layout>
