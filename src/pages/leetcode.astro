---
import Layout from "../layouts/Layout.astro";
import LeetCodeStats from "../components/LeetCodeStats.astro";
import LeetCodeContests from "../components/LeetCodeContests.astro";
import LeetCodeBadges from "../components/LeetCodeBadges.astro";
import { Trophy, Target, Award, ArrowLeft } from "lucide-react";
---

<Layout title="LeetCode - Tashif Ahmad Khan">
	<div class="py-10 text-foreground">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<a href="/" class="neo-btn neo-btn--ghost mb-8 text-sm">
				<ArrowLeft size={18} className="mr-1" /> Back
			</a>
			<header class="mb-10 flex items-start gap-5">
				<div
					class="neo-card p-4 flex items-center justify-center"
					style="width:4.25rem;height:4.25rem;"
				>
					<Trophy className="w-8 h-8 text-primary-foreground" />
				</div>
				<div class="flex-1">
					<h1 class="neo-heading m-0 mb-3">LeetCode Profile</h1>
					<p class="text-sm sm:text-base max-w-prose text-muted-foreground">
						Competitive programming achievements and statistics
					</p>
				</div>
			</header>

			<section class="neo-section mb-10">
				<h2 class="text-xl font-bold mb-6">Statistics</h2>
				<LeetCodeStats />
			</section>

			<section class="neo-section mb-10">
				<h2 class="text-xl font-bold mb-6">Recent Contests</h2>
				<LeetCodeContests />
			</section>

			<section class="neo-section mb-10">
				<h2 class="text-xl font-bold mb-6">Achievement Badges</h2>
				<LeetCodeBadges />
			</section>
		</div>
	</div>
</Layout>
