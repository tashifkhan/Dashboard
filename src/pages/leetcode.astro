---
import Layout from "../layouts/Layout.astro";
import LeetCodeStats from "../components/LeetCodeStats.astro";
import LeetCodeContests from "../components/LeetCodeContests.astro";
import LeetCodeBadges from "../components/LeetCodeBadges.astro";
import { Trophy, Target, Award, ArrowLeft } from "lucide-react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
---

<Layout title="LeetCode - Tashif Ahmad Khan">
	<div
		class="relative min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-950 dark:to-gray-900 py-8 text-gray-900 dark:text-gray-100 transition-colors duration-300"
	>
		<div
			class="pointer-events-none absolute inset-0 [mask-image:radial-gradient(80%_60%_at_50%_0%,black,transparent)]"
		>
			<div
				class="h-40 bg-gradient-to-b from-orange-200/40 to-transparent dark:from-orange-900/20"
			>
			</div>
		</div>
		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-6">
				<Button
					variant="ghost"
					className="mb-4 pl-0 hover:pl-2 transition-all"
					asChild
				>
					<a href="/">
						<ArrowLeft size={20} className="mr-2" />
						Back to Home
					</a>
				</Button>

				<Card
					className="bg-white/70 dark:bg-gray-900/50 backdrop-blur border-gray-200/60 dark:border-gray-800/60"
				>
					<CardContent className="p-5 flex items-center gap-4">
						<div
							class="p-2.5 rounded-xl bg-purple-500/10 dark:bg-purple-500/10 text-purple-600 dark:text-purple-400 ring-1 ring-purple-500/20"
						>
							<Trophy className="w-5 h-5" />
						</div>
						<div class="flex-1">
							<h1
								class="text-xl font-semibold text-gray-900 dark:text-white mb-1"
							>
								LeetCode Profile
							</h1>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								Competitive programming achievements and statistics
							</p>
						</div>
					</CardContent>
				</Card>
			</div>

			<div class="space-y-8">
				<!-- Stats Section -->
				<Card
					className="relative overflow-hidden border-gray-200/60 dark:border-gray-800/60 bg-white/70 dark:bg-gray-900/50 backdrop-blur shadow-lg"
				>
					<div
						class="absolute -top-20 -right-16 h-48 w-48 sm:h-64 sm:w-64 rounded-full bg-green-200/40 dark:bg-green-900/20 blur-3xl pointer-events-none"
					>
					</div>
					<CardHeader className="relative z-10">
						<div class="flex items-center space-x-3">
							<div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-xl">
								<Target
									className="w-6 h-6 text-green-600 dark:text-green-400"
								/>
							</div>
							<CardTitle className="text-2xl sm:text-3xl">Statistics</CardTitle>
						</div>
					</CardHeader>
					<CardContent className="relative z-10">
						<LeetCodeStats />
					</CardContent>
				</Card>

				<!-- Contests Section -->
				<Card
					className="relative overflow-hidden border-gray-200/60 dark:border-gray-800/60 bg-white/70 dark:bg-gray-900/50 backdrop-blur shadow-lg"
				>
					<div
						class="absolute -top-20 -left-16 h-48 w-48 sm:h-64 sm:w-64 rounded-full bg-yellow-200/40 dark:bg-yellow-900/20 blur-3xl pointer-events-none"
					>
					</div>
					<CardHeader className="relative z-10">
						<div class="flex items-center space-x-3">
							<div class="p-2 bg-yellow-100 dark:bg-yellow-900/30 rounded-xl">
								<Trophy
									className="w-6 h-6 text-yellow-600 dark:text-yellow-400"
								/>
							</div>
							<CardTitle className="text-2xl sm:text-3xl"
								>Recent Contests</CardTitle
							>
						</div>
					</CardHeader>
					<CardContent className="relative z-10">
						<LeetCodeContests />
					</CardContent>
				</Card>

				<!-- Badges Section -->
				<Card
					className="relative overflow-hidden border-gray-200/60 dark:border-gray-800/60 bg-white/70 dark:bg-gray-900/50 backdrop-blur shadow-lg"
				>
					<div
						class="absolute -top-20 -right-16 h-48 w-48 sm:h-64 sm:w-64 rounded-full bg-purple-200/40 dark:bg-purple-900/20 blur-3xl pointer-events-none"
					>
					</div>
					<CardHeader className="relative z-10">
						<div class="flex items-center space-x-3">
							<div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-xl">
								<Award
									className="w-6 h-6 text-purple-600 dark:text-purple-400"
								/>
							</div>
							<CardTitle className="text-2xl sm:text-3xl"
								>Achievement Badges</CardTitle
							>
						</div>
					</CardHeader>
					<CardContent className="relative z-10">
						<LeetCodeBadges />
					</CardContent>
				</Card>
			</div>
		</div>
	</div>
</Layout>
