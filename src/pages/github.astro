---
import Layout from "../layouts/Layout.astro";
import GitHubStats from "../components/GitHubStats.astro";
import { starLists } from "../data/starLists";
import {
	Github as GithubIcon,
	BarChart3,
	Activity,
	Star,
	ArrowLeft,
	ExternalLink,
} from "lucide-react";
import {
	Card,
	CardContent,
	CardHeader,
	CardTitle,
	CardDescription,
} from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";

const starredLists = starLists || [];
---

<Layout title="GitHub - Tashif Ahmad Khan">
	<div
		class="relative min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-950 dark:to-gray-900 py-8 text-gray-900 dark:text-gray-100"
	>
		<div
			class="pointer-events-none absolute inset-0 [mask-image:radial-gradient(80%_60%_at_50%_0%,black,transparent)]"
		>
			<div
				class="h-40 bg-gradient-to-b from-gray-300/30 to-transparent dark:from-gray-800/20"
			>
			</div>
		</div>
		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-6">
				<Button
					variant="ghost"
					className="mb-4 pl-0 hover:pl-2 transition-all"
					asChild
				>
					<a href="/">
						<ArrowLeft size={20} className="mr-2" />
						Back to Home
					</a>
				</Button>

				<Card
					className="bg-white/70 dark:bg-gray-900/50 backdrop-blur border-gray-200/60 dark:border-gray-800/60"
				>
					<CardContent className="p-5 flex items-center gap-4">
						<div
							class="p-2.5 rounded-xl bg-emerald-500/10 dark:bg-emerald-500/10 text-emerald-600 dark:text-emerald-400 ring-1 ring-emerald-500/20"
						>
							<GithubIcon className="w-5 h-5" />
						</div>
						<div class="flex-1">
							<h1
								class="text-xl font-semibold text-gray-900 dark:text-white mb-1"
							>
								GitHub Profile
							</h1>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								Open source contributions and development activity
							</p>
						</div>
					</CardContent>
				</Card>
			</div>

			<div class="space-y-8">
				<!-- Stats Section -->
				<Card
					className="bg-white/70 dark:bg-gray-900/50 backdrop-blur border-gray-200/60 dark:border-gray-800/60"
				>
					<CardHeader>
						<div class="flex items-center space-x-3">
							<BarChart3 className="w-5 h-5 text-muted-foreground" />
							<CardTitle>Statistics & Activity</CardTitle>
						</div>
					</CardHeader>
					<CardContent>
						<GitHubStats />
					</CardContent>
				</Card>

				<!-- Additional GitHub Info -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					<!-- Profile Card -->
					<Card
						className="bg-white/70 dark:bg-gray-900/50 backdrop-blur border-gray-200/60 dark:border-gray-700/60 hover:shadow-lg transition-all duration-300"
					>
						<CardHeader>
							<div class="flex items-center space-x-3">
								<GithubIcon className="w-5 h-5 text-muted-foreground" />
								<CardTitle className="text-lg">Profile</CardTitle>
							</div>
							<CardDescription>
								View my complete GitHub profile and repositories
							</CardDescription>
						</CardHeader>
						<CardContent>
							<Button
								variant="outline"
								className="w-full justify-between group"
								asChild
							>
								<a
									href="https://github.com/tashifkhan"
									target="_blank"
									rel="noopener noreferrer"
								>
									Visit Profile
									<ExternalLink
										size={16}
										className="ml-2 group-hover:translate-x-1 transition-transform"
									/>
								</a>
							</Button>
						</CardContent>
					</Card>

					<!-- Activity Card -->
					<Card
						className="bg-white/70 dark:bg-gray-900/50 backdrop-blur border-gray-200/60 dark:border-gray-700/60 hover:shadow-lg transition-all duration-300"
					>
						<CardHeader>
							<div class="flex items-center space-x-3">
								<Activity className="w-5 h-5 text-muted-foreground" />
								<CardTitle className="text-lg">Activity</CardTitle>
							</div>
							<CardDescription>
								Check out my recent commits and contributions
							</CardDescription>
						</CardHeader>
						<CardContent>
							<Button
								variant="outline"
								className="w-full justify-between group"
								asChild
							>
								<a
									href="https://github.com/tashifkhan?tab=activity"
									target="_blank"
									rel="noopener noreferrer"
								>
									View Activity
									<ExternalLink
										size={16}
										className="ml-2 group-hover:translate-x-1 transition-transform"
									/>
								</a>
							</Button>
						</CardContent>
					</Card>

					<!-- Repositories Card -->
					<Card
						className="bg-white/70 dark:bg-gray-900/50 backdrop-blur border-gray-200/60 dark:border-gray-700/60 hover:shadow-lg transition-all duration-300"
					>
						<CardHeader>
							<div class="flex items-center space-x-3">
								<Star className="w-5 h-5 text-muted-foreground" />
								<CardTitle className="text-lg">Repositories</CardTitle>
							</div>
							<CardDescription>
								Explore my open source projects and contributions
							</CardDescription>
						</CardHeader>
						<CardContent>
							<Button
								variant="outline"
								className="w-full justify-between group"
								asChild
							>
								<a
									href="https://github.com/tashifkhan?tab=repositories"
									target="_blank"
									rel="noopener noreferrer"
								>
									Browse Repos
									<ExternalLink
										size={16}
										className="ml-2 group-hover:translate-x-1 transition-transform"
									/>
								</a>
							</Button>
						</CardContent>
					</Card>
				</div>
			</div>
		</div>
	</div>
</Layout>
