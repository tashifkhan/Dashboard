---
import Layout from "../layouts/Layout.astro";
import GitHubStats from "../components/GitHubStats.astro";
import {
	Github as GithubIcon,
	BarChart3,
	Activity,
	Star,
	ArrowLeft,
	ExternalLink,
} from "lucide-react";
---

<Layout title="GitHub - Tashif Ahmad Khan">
	<div
		class="relative min-h-screen bg-gradient-to-b from-gray-50 to-white dark:from-gray-950 dark:to-gray-900 py-8 text-gray-900 dark:text-gray-100"
	>
		<div
			class="pointer-events-none absolute inset-0 [mask-image:radial-gradient(80%_60%_at_50%_0%,black,transparent)]"
		>
			<div
				class="h-40 bg-gradient-to-b from-gray-300/30 to-transparent dark:from-gray-800/20"
			>
			</div>
		</div>
		<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-8">
				<a
					href="/"
					class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-800 dark:hover:text-orange-300 mb-4 transition-colors"
				>
					<ArrowLeft size={20} className="mr-2" />
					Back to Home
				</a>
				<div class="flex items-center space-x-3 mb-4">
					<div
						class="p-3 bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl"
					>
						<GithubIcon className="w-6 h-6 text-white" />
					</div>
					<div>
						<h1
							class="text-4xl font-bold tracking-tight bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent"
						>
							GitHub Profile
						</h1>
						<p class="text-gray-600 dark:text-gray-300">
							Open source contributions and development activity
						</p>
					</div>
				</div>
			</div>

			<div class="space-y-8">
				<!-- Stats Section -->
				<div
					class="rounded-2xl border border-gray-200/60 dark:border-gray-800/60 bg-white/70 dark:bg-gray-900/50 backdrop-blur p-4 sm:p-6"
				>
					<div class="flex items-center space-x-3 mb-4 sm:mb-6">
						<BarChart3 className="w-5 h-5 text-gray-600 dark:text-gray-400" />
						<h2
							class="text-2xl font-bold tracking-tight bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-300 bg-clip-text text-transparent"
						>
							Statistics & Activity
						</h2>
					</div>
					<GitHubStats />
				</div>

				<!-- Additional GitHub Info -->
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					<!-- Profile Card -->
					<div
						class="bg-white/70 dark:bg-gray-900/50 backdrop-blur p-6 rounded-xl border border-gray-200/60 dark:border-gray-700/60"
					>
						<div class="flex items-center space-x-3 mb-4">
							<GithubIcon
								className="w-6 h-6 text-gray-600 dark:text-gray-400"
							/>
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
								Profile
							</h3>
						</div>
						<p class="text-gray-600 dark:text-gray-300 mb-4">
							View my complete GitHub profile and repositories
						</p>
						<a
							href="https://github.com/tashifkhan"
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-800 dark:hover:text-orange-300"
						>
							Visit Profile <ExternalLink size={16} className="ml-1.5" />
						</a>
					</div>

					<!-- Activity Card -->
					<div
						class="bg-white/70 dark:bg-gray-900/50 backdrop-blur p-6 rounded-xl border border-gray-200/60 dark:border-gray-700/60"
					>
						<div class="flex items-center space-x-3 mb-4">
							<Activity className="w-6 h-6 text-gray-600 dark:text-gray-400" />
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
								Activity
							</h3>
						</div>
						<p class="text-gray-600 dark:text-gray-300 mb-4">
							Check out my recent commits and contributions
						</p>
						<a
							href="https://github.com/tashifkhan?tab=activity"
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-800 dark:hover:text-orange-300"
						>
							View Activity <ExternalLink size={16} className="ml-1.5" />
						</a>
					</div>

					<!-- Repositories Card -->
					<div
						class="bg-white/70 dark:bg-gray-900/50 backdrop-blur p-6 rounded-xl border border-gray-200/60 dark:border-gray-700/60"
					>
						<div class="flex items-center space-x-3 mb-4">
							<Star className="w-6 h-6 text-gray-600 dark:text-gray-400" />
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
								Repositories
							</h3>
						</div>
						<p class="text-gray-600 dark:text-gray-300 mb-4">
							Explore my open source projects and contributions
						</p>
						<a
							href="https://github.com/tashifkhan?tab=repositories"
							target="_blank"
							rel="noopener noreferrer"
							class="inline-flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-800 dark:hover:text-orange-300"
						>
							Browse Repos <ExternalLink size={16} className="ml-1.5" />
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
