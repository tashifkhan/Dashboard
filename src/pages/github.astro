---
import Layout from "../layouts/Layout.astro";
import GitHubStats from "../components/GitHubStats.astro";
import { starLists } from "../data/starLists";
import {
	Github as GithubIcon,
	BarChart3,
	Activity,
	Star,
	ArrowLeft,
	ExternalLink,
	List as ListIcon,
} from "lucide-react";

const starredLists = starLists || [];
---

<Layout title="GitHub - Tashif Ahmad Khan">
	<div class="min-h-screen bg-background text-foreground py-8">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="mb-10">
				<a
					href="/"
					class="inline-flex items-center gap-2 neo-btn neo-btn--outline !py-1.5 !px-3 text-xs sm:text-sm"
				>
					<ArrowLeft size={16} />
					Back
				</a>
				<div class="mt-6 flex items-center gap-4">
					<div class="neo-card !p-3 flex items-center justify-center h-12 w-12">
						<GithubIcon className="w-6 h-6" />
					</div>
					<div>
						<h1 class="text-3xl sm:text-4xl font-bold tracking-tight">
							GitHub Profile
						</h1>
						<p class="text-sm text-muted-foreground mt-1">
							Open source contributions and development activity
						</p>
					</div>
				</div>
			</div>

			<section
				class="neo-section !p-5 sm:!p-6 mb-10"
				aria-labelledby="gh-stats-heading"
			>
				<div class="flex items-center gap-2 mb-4">
					<BarChart3 className="w-5 h-5 text-muted-foreground" />
					<h2
						id="gh-stats-heading"
						class="text-xl font-semibold tracking-tight"
					>
						Statistics & Activity
					</h2>
				</div>
				<GitHubStats />
			</section>

			<section
				class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5"
				aria-label="Supplementary GitHub links"
			>
				<div
					class="neo-card flex flex-col gap-3"
					aria-labelledby="profile-title"
				>
					<div class="flex items-center gap-2">
						<GithubIcon className="w-5 h-5 text-muted-foreground" />
						<h3 id="profile-title" class="text-sm font-semibold tracking-tight">
							Profile
						</h3>
					</div>
					<p class="text-xs text-muted-foreground leading-snug">
						View my complete GitHub profile and repositories.
					</p>
					<a
						href="https://github.com/tashifkhan"
						target="_blank"
						rel="noopener noreferrer"
						class="mt-auto neo-btn !px-3 !py-1.5 text-xs"
						>Visit Profile <ExternalLink size={14} /></a
					>
				</div>
				<div
					class="neo-card flex flex-col gap-3"
					aria-labelledby="activity-title"
				>
					<div class="flex items-center gap-2">
						<Activity className="w-5 h-5 text-muted-foreground" />
						<h3
							id="activity-title"
							class="text-sm font-semibold tracking-tight"
						>
							Activity
						</h3>
					</div>
					<p class="text-xs text-muted-foreground leading-snug">
						Check out my recent commits and contributions.
					</p>
					<a
						href="https://github.com/tashifkhan?tab=activity"
						target="_blank"
						rel="noopener noreferrer"
						class="mt-auto neo-btn !px-3 !py-1.5 text-xs"
						>View Activity <ExternalLink size={14} /></a
					>
				</div>
				<div class="neo-card flex flex-col gap-3" aria-labelledby="repos-title">
					<div class="flex items-center gap-2">
						<Star className="w-5 h-5 text-muted-foreground" />
						<h3 id="repos-title" class="text-sm font-semibold tracking-tight">
							Repositories
						</h3>
					</div>
					<p class="text-xs text-muted-foreground leading-snug">
						Explore my open source projects and contributions.
					</p>
					<a
						href="https://github.com/tashifkhan?tab=repositories"
						target="_blank"
						rel="noopener noreferrer"
						class="mt-auto neo-btn !px-3 !py-1.5 text-xs"
						>Browse Repos <ExternalLink size={14} /></a
					>
				</div>
			</section>
		</div>
	</div>
</Layout>
