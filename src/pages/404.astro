---
import Layout from "../layouts/Layout.astro";
import {
	Home,
	Search,
	ArrowLeft,
	Compass,
	Zap,
	FileText,
	Code2,
	BookOpen,
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
---

<Layout title="404 - Page Not Found | Tashif Ahmad Khan">
	<div
		class="relative min-h-screen bg-background text-foreground transition-colors duration-300 font-sans"
	>
		<!-- Background pattern overlay -->
		<div
			class="pointer-events-none absolute inset-0 [mask-image:radial-gradient(80%_60%_at_50%_0%,black,transparent)]"
		>
			<div class="h-40 bg-gradient-to-b from-primary/20 to-transparent"></div>
		</div>

		<!-- Animated background elements -->
		<div class="absolute inset-0 overflow-hidden pointer-events-none">
			<div
				class="absolute top-20 left-1/4 w-64 h-64 bg-primary/20 rounded-full blur-3xl animate-pulse"
			>
			</div>
			<div
				class="absolute bottom-20 right-1/4 w-96 h-96 bg-primary/20 rounded-full blur-3xl animate-pulse delay-1000"
			>
			</div>
			<div
				class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-primary/20 rounded-full blur-2xl animate-bounce"
			>
			</div>
		</div>

		<div
			class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4 sm:px-6 lg:px-8"
		>
			<!-- Main 404 Content -->
			<div class="text-center max-w-2xl mx-auto">
				<!-- Large 404 Text with special styling -->
				<div class="relative mb-8 overflow-hidden">
					<h1
						class="text-8xl sm:text-9xl lg:text-[12rem] font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary via-primary/80 to-primary/60 select-none"
					>
						404
					</h1>
					<div
						class="absolute inset-0 text-8xl sm:text-9xl lg:text-[12rem] font-bold text-primary/30 blur-sm -z-10 select-none"
					>
						404
					</div>
				</div>

				<!-- Icon with animation -->
				<div class="flex justify-center mb-6">
					<div class="relative">
						<div
							class="absolute inset-0 bg-primary/20 rounded-full blur-xl animate-pulse"
						>
						</div>
						<div
							class="relative bg-card/80 backdrop-blur-xl p-6 rounded-full border border-border/50 shadow-lg"
						>
							<Compass size={48} className="text-primary animate-spin-slow" />
						</div>
					</div>
				</div>

				<!-- Error message -->
				<h2
					class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-foreground to-muted-foreground bg-clip-text text-transparent mb-4"
				>
					Page Not Found
				</h2>

				<p class="text-lg text-muted-foreground mb-8 leading-relaxed">
					Oops! The page you're looking for seems to have wandered off into the
					digital void.
					<br class="hidden sm:block" />
					Don't worry, even the best explorers sometimes take a wrong turn.
				</p>

				<!-- Action buttons -->
				<div
					class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12"
				>
					<Button
						className="bg-primary text-primary-foreground hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 h-12 px-6 text-base"
						asChild
					>
						<a
							href="/"
							class="flex items-center gap-2 hover:text-primary transition-colors duration-300"
						>
							<Home size={20} className="mr-2" />
							Back to Dashboard
							<ArrowLeft
								size={16}
								className="ml-2 group-hover:-translate-x-1 transition-transform"
							/>
						</a>
					</Button>

					<Button
						variant="outline"
						className="h-12 px-6 text-base hover:bg-muted transition-all duration-300 transform hover:scale-105"
						onClick={() => history.back()}
					>
						<ArrowLeft size={20} className="mr-2" />
						Go Back
					</Button>
				</div>

				<!-- Search suggestion -->
				<Card
					className="bg-card/80 backdrop-blur-xl border-border/50 shadow-lg"
				>
					<CardContent className="p-6">
						<div class="flex items-center justify-center space-x-2 mb-3">
							<Search size={20} className="text-primary" />
							<h3
								class="text-lg font-semibold bg-gradient-to-r from-foreground to-muted-foreground bg-clip-text text-transparent"
							>
								Looking for something specific?
							</h3>
						</div>
						<p class="text-sm text-muted-foreground mb-4">
							Here are some popular sections you might be interested in:
						</p>

						<!-- Quick navigation links -->
						<div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
							<a
								href="/#projects-tab"
								class="group flex flex-col items-center p-3 bg-muted/50 hover:bg-primary/10 rounded-xl transition-all duration-300 hover:shadow-md hover:scale-105"
							>
								<div
									class="p-2 bg-primary/10 rounded-lg mb-2 group-hover:scale-110 transition-transform"
								>
									<Zap size={16} className="text-primary" />
								</div>
								<span class="text-xs font-medium text-muted-foreground"
									>Projects</span
								>
							</a>

							<a
								href="/#blog-tab"
								class="group flex flex-col items-center p-3 bg-muted/50 hover:bg-primary/10 rounded-xl transition-all duration-300 hover:shadow-md hover:scale-105"
							>
								<div
									class="p-2 bg-primary/10 rounded-lg mb-2 group-hover:scale-110 transition-transform"
								>
									<BookOpen size={16} className="text-primary" />
								</div>
								<span class="text-xs font-medium text-muted-foreground"
									>Blog</span
								>
							</a>

							<a
								href="/#leetcode"
								class="group flex flex-col items-center p-3 bg-muted/50 hover:bg-primary/10 rounded-lg transition-all duration-300 hover:shadow-md"
							>
								<div
									class="p-2 bg-primary/10 rounded-lg mb-2 group-hover:scale-110 transition-transform"
								>
									<Code2 size={16} className="text-primary" />
								</div>
								<span class="text-xs font-medium text-muted-foreground"
									>LeetCode</span
								>
							</a>

							<a
								href="/#resume"
								class="group flex flex-col items-center p-3 bg-muted/50 hover:bg-primary/10 rounded-lg transition-all duration-300 hover:shadow-md"
							>
								<div
									class="p-2 bg-primary/10 rounded-lg mb-2 group-hover:scale-110 transition-transform"
								>
									<FileText size={16} className="text-primary" />
								</div>
								<span class="text-xs font-medium text-muted-foreground"
									>Resume</span
								>
							</a>
						</div>
					</CardContent>
				</Card>
			</div>
		</div>
	</div>

	<!-- Add some custom styles for the animations -->
	<style>
		@keyframes float {
			0%,
			100% {
				transform: translateY(0px);
			}
			50% {
				transform: translateY(-20px);
			}
		}

		.animate-float {
			animation: float 3s ease-in-out infinite;
		}

		.animate-float-delayed {
			animation: float 3s ease-in-out infinite;
			animation-delay: 1.5s;
		}

		.animate-spin-slow {
			animation: spin 4s linear infinite;
		}

		@keyframes spin {
			from {
				transform: rotate(0deg);
			}
			to {
				transform: rotate(360deg);
			}
		}
	</style>
</Layout>
