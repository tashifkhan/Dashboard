---
import Layout from "../layouts/Layout.astro";
import { Home, Search, ArrowLeft, Compass, Zap } from "lucide-react";
---

<Layout title="404 - Page Not Found | Tashif Ahmad Khan">
	<div
		class="min-h-screen flex flex-col items-center justify-center bg-background text-foreground px-6 py-12"
	>
		<div class="text-center w-full max-w-xl">
			<h1 class="neo-heading !text-7xl !mb-6">404</h1>
			<h2 class="neo-heading !text-2xl !mb-4">Page Not Found</h2>
			<p
				class="text-sm sm:text-base text-muted-foreground mb-8 leading-relaxed"
			>
				The page you were looking for doesnâ€™t exist or has been moved.
			</p>
			<div
				class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-10"
			>
				<a
					href="/"
					class="neo-btn !px-5 !py-3 text-sm font-semibold inline-flex items-center gap-2"
					><Home size={18} /> Dashboard</a
				>
				<button
					onclick="history.back()"
					class="neo-btn outline !px-5 !py-3 text-sm font-semibold inline-flex items-center gap-2"
					><ArrowLeft size={18} /> Go Back</button
				>
			</div>
			<div class="grid grid-cols-2 sm:grid-cols-4 gap-4 border-2 p-4 bg-card">
				<a
					href="/#projects-tab"
					class="block border-2 p-3 text-xs font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
					>Projects</a
				>
				<a
					href="/#blog-tab"
					class="block border-2 p-3 text-xs font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
					>Blog</a
				>
				<a
					href="/#leetcode-tab"
					class="block border-2 p-3 text-xs font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
					>LeetCode</a
				>
				<a
					href="/#resume-tab"
					class="block border-2 p-3 text-xs font-medium hover:bg-accent hover:text-accent-foreground transition-colors"
					>Resume</a
				>
			</div>
		</div>
	</div>
</Layout>
